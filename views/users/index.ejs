<%- include('../partials/header') %>
<div class="row">
    <div class="col s12 m4 l8">
        <% if (contributor && contributor.role === 'Admin') { %>
            <a href="/users/add" class="btn-small left">Add User</a>
        <% }; %>
        </div>
    <div id="users" class="col s12 m6">
      <% users.forEach(function(user) { %>
        <div class="card blue-grey darken-1">
          <div class ="card-title">
              <img src="<%= user.avatar %>">
          </div>
          <div class="card-content white-text">
              <span class="card-title"><%= user.name %></span>
              <p><%= user.email %></p>
                <div class="card-action">
                  <span class="badge blue-grey lighten-1 white-text"><%= user.role %></span>
                    <a href="/users/<%= user._id %>" class="btn-small" >View User</a>
                </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
<%- include('../partials/footer') %>